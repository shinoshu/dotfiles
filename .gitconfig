[user]
	name = Shuma Shinozaki
	email = shu.shinozaki@gmail.com
[init]
	templatedir = ~/.git_templates
[core]
	editor = vim
	excludesfile = /Users/shinozaki/.gitignore_global
[alias]
	a = add
	ac = !git add . && git commit
	b = branch
	ba = branch -a
	cm = commit
	cma = commit -a
	co = checkout
	cob = checkout -b
	d = diff
	s = status
	ss = status -s
	webui = !~/src/github.com/alberthier/git-webui/release/libexec/git-core/git-webui
[ghq]
    root = ~/src
[webui]
	autoupdate = true
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool]
	prompt = false
[diff]
	tool = Kaleidoscope
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[remind]
	paths = /Users/shinozaki/src/github.com/shinoshu/*
